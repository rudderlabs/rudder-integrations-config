{
  "name": "GOOGLE_OPTIMIZE",
  "displayName": "Google Optimize",
  "config": {
    "transformAt": "processor",
    "saveDestinationResponse": true,
    "includeKeys": [
      "ga",
      "trackingId",
      "containerId",
      "async",
      "aflicker",
      "blackListedEvents",
      "whiteListedEvents"
    ],
    "excludeKeys": [],
    "supportedSourceTypes": [
      "web"
    ],
    "destConfig": {
      "defaultConfig": [],
      "web": [
        "ga",
        "trackingId",
        "containerId",
        "async",
        "aflicker",
        "useNativeSDK",
        "blackListedEvents",
        "whiteListedEvents"
      ]
    }
  },
  "secretKeys": [],
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "checkbox",
          "label": "Load Google Analytics",
          "value": "ga",
          "default": true,
          "footerNote": "Enable to load Google Analytics"
        },
        {
          "type": "textInput",
          "label": "Tracking ID",
          "value": "trackingId",
          "inputFieldType": "text",
          "regex": ".*",
          "required": false,
          "placeholder": "e.g. UA-13364242-1",
          "secret": false
        },
        {
          "type": "textInput",
          "label": "Containter ID",
          "value": "containerId",
          "inputFieldType": "text",
          "regex": ".*",
          "required": true,
          "placeholder": "e.g. OPT-ABCD9F9",
          "secret": false
        },
        {
          "type": "checkbox",
          "label": "Async mode",
          "value": "async",
          "default": false,
          "footerNote": "Enable to use async optimize"
        },
        {
          "type": "checkbox",
          "label": "Anti-flicker snippet",
          "value": "aflicker",
          "default": false,
          "footerNote": "Only install the anti-flicker snippet when necessary as it can impact the page performance."
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "defaultCheckbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ]
    }
  ]
}