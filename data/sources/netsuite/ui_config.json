{
  "auth": {
    "config": [
      {
        "fields": [
          {
            "label": "Account Name",
            "placeholder": "e.g: account name",
            "regex": "^(.{0,100})$",
            "regexErrorMessage": "Invalid Value",
            "required": true,
            "type": "textInput",
            "value": "rudder_account_name"
          },
          {
            "label": "Account Id",
            "regex": "^(.{0,100})$",
            "regexErrorMessage": "Invalid Value",
            "required": true,
            "type": "textInput",
            "value": "accountId"
          },
          {
            "label": "Consumer Key",
            "regex": "^(.{0,100})$",
            "regexErrorMessage": "Invalid Value",
            "required": true,
            "type": "textInput",
            "value": "consumerKey"
          },
          {
            "inputType": "password",
            "label": "Consumer Secret",
            "regex": "^(.{0,100})$",
            "regexErrorMessage": "Invalid Value",
            "required": true,
            "type": "textInput",
            "value": "consumerSecret"
          },
          {
            "label": "Token ID",
            "regex": "^(.{0,100})$",
            "regexErrorMessage": "Invalid Value",
            "required": true,
            "type": "textInput",
            "value": "tokenId"
          },
          {
            "inputType": "password",
            "label": "Token Secret",
            "regex": "^(.{0,100})$",
            "regexErrorMessage": "Invalid Value",
            "required": true,
            "type": "textInput",
            "value": "tokenSecret"
          }
        ]
      }
    ],
    "nameField": "rudder_account_name",
    "secretFields": [
      "consumerKey",
      "consumerSecret",
      "tokenId",
      "tokenSecret"
    ],
    "type": "form"
  },
  "config": [
    {
      "fields": [
        {
          "format": "YYYY-MM-DD",
          "label": "Historical sync start date",
          "required": true,
          "type": "datePicker",
          "value": "startDateIso"
        },
        {
          "footerNote": "In order to sync saved searches, you need to install https://js.blendo.co/netsuite/v1/restlet.js script in your Netsuite account, and paste the generated Restlet URL here.",
          "label": "Rudder Restlet URL",
          "type": "textInput",
          "value": "restletUrl"
        }
      ],
      "title": "Source Settings"
    }
  ]
}