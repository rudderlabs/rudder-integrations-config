{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Customer ID",
          "value": "customerId",
          "regex": "^(.{1,100})$",
          "regexErrorMessage": "Invalid Customer Id",
          "required": true,
          "placeholder": "e.g: 6293429833"
        }
      ]
    },
    {
      "title": "Event Settings",
      "fields": [
        {
          "type": "dynamicSelectForm",
          "label": "Map your events with Google Ads Offline Conversions",
          "labelLeft": "RudderStack Event Name",
          "labelRight": "Google Ads Offline Conversions",
          "value": "eventsToStandard",
          "keyLeft": "from",
          "keyRight": "to",
          "required": false,
          "placeholderLeft": "e.g: Promotion Clicked",
          "options": [
            {
              "name": "Click",
              "value": "click"
            },
            {
              "name": "Call",
              "value": "call"
            }
          ]
        }
      ]
    }
  ]
