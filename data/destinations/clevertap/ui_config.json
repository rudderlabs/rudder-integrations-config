{
  "uiConfig": [
    {
      "fields": [
        {
          "footerNote": "Your AccountId",
          "label": "Account ID",
          "placeholder": "e.g. 6Z2-RRZ-KZ6Z",
          "regex": ".*",
          "required": true,
          "type": "textInput",
          "value": "accountId"
        },
        {
          "footerNote": "Your Passcode",
          "label": "Passcode",
          "placeholder": "e.g. WXE-ISD-GHUL",
          "regex": ".*",
          "required": true,
          "secret": true,
          "type": "textInput",
          "value": "passcode"
        },
        {
          "footerNote": "(Note: Currently this setting is applicable only for Mobile SDK's in device mode)",
          "label": "Account Token",
          "placeholder": "e.g. 1XX-bX6",
          "regex": ".*",
          "secret": true,
          "type": "textInput",
          "value": "accountToken"
        },
        {
          "default": false,
          "footerNote": "Enable this option to track anonymous users",
          "label": "Enable tracking for anonymous users",
          "type": "checkbox",
          "value": "trackAnonymous"
        },
        {
          "default": false,
          "footerNote": "Enable this option to use Clevertap objectId for mapping, please refer to docs for further info",
          "label": "Use Clevertap ObjectId for Mapping",
          "type": "checkbox",
          "value": "enableObjectIdMapping"
        },
        {
          "defaultOption": {
            "name": "None",
            "value": "none"
          },
          "label": "Region",
          "options": [
            {
              "name": "None",
              "value": "none"
            },
            {
              "name": "India",
              "value": "in1"
            },
            {
              "name": "Singapore",
              "value": "sg1"
            },
            {
              "name": "US",
              "value": "us1"
            },
            {
              "name": "South Korea",
              "value": "sk1"
            }
          ],
          "required": false,
          "type": "singleSelect",
          "value": "region"
        }
      ],
      "title": "Connection Settings"
    },
    {
      "fields": [
        {
          "default": false,
          "label": "Use device-mode to send events",
          "type": "checkbox",
          "value": "useNativeSDK"
        }
      ],
      "title": "Native SDK"
    },
    {
      "fields": [
        {
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          },
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "required": false,
          "type": "singleSelect",
          "value": "eventFilteringOption"
        },
        {
          "customFields": [
            {
              "placeholder": "e.g: Anonymous Page Visit",
              "required": false,
              "type": "textInput",
              "value": "eventName"
            }
          ],
          "label": "Allowlist",
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents"
        },
        {
          "customFields": [
            {
              "placeholder": "e.g: Credit Card Added",
