          "required": false,
          "secret": true,
          "type": "textInput",
          "value": "apiKey"
        },
        {
          "label": "Campaign ID",
          "placeholder": "e.g. 276450567",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Please check your Campaign ID. It should be numerical, something like 276450567",
          "required": false,
          "secret": true,
          "type": "textInput",
          "value": "campaignId"
