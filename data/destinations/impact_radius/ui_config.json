{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Account SID",
          "value": "accountSID",
          "regex": "^(.{1,100})$",
          "regexErrorMessage": "Invalid Account SID",
          "required": true,
          "placeholder": "e.g. saDbFeVZicnpPeGJ6M0JOTXFxTVN2QkdpWTJ3NENpNUlZ",
          "secret": false,
          "footerNote": "Your Impact Account SID"
        },
        {
          "type": "textInput",
          "label": "API Key",
          "value": "apiKey",
          "regex": "^(.{1,100})$",
          "regexErrorMessage": "Invalid API Key",
          "required": true,
          "placeholder": "e.g: npPeGJ6M0JOjgAvfCs-XAYkh~dpWTJ",
          "secret": true,
          "footerNote": "Your Impact Auth Token"
        },
        {
          "type": "textInput",
          "label": "Campaign Id",
          "value": "campaignId",
          "regex": "^[0-9]+$",
          "regexErrorMessage": "Invalid Campaign Id",
          "required": true,
          "placeholder": "e.g: 34343",
          "secret": false,
          "footerNote": "Your unique campaign identifier/Program Id"
        },
        {
          "type": "textInput",
          "label": "Impact App Id",
          "value": "impactAppId",
          "regex": "^[0-9]+$",
          "regexErrorMessage": "Invalid Impact App Id",
          "required": true,
          "placeholder": "e.g: 34343",
          "secret": false,
          "footerNote": "'System App ID' of your app in impact.com"
        }
      ]
    },
    {
      "title": "Event Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Event Type Id",
          "value": "eventTypeId",
          "regex": "^[0-9]+$",
          "regexErrorMessage": "Invalid Account SID",
          "required": false,
          "placeholder": "e.g. 35355",
          "secret": false,
          "footerNote": "Your Event Type Id (Uniqe identifier for the event type)"
        },
        {
          "type": "dynamicForm",
          "label": "Additional parameters mapping for conversion event",
          "labelLeft": "Rudder payload property",
          "labelRight": "Impact radius parameter",
          "value": "rudderToImpactProperty",
          "keyLeft": "from",
          "keyRight": "to",
          "placeholderLeft": "e.g: profit",
          "placeholderRight": "e.g: Money1"
        }
      ]
    }
  ]
}
