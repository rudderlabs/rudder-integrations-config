{
  "uiConfig": {
    "baseTemplate": [
      {
        "title": "Initial setup",
        "note": "Review how this destination is set up",
        "sections": [
          {
            "groups": [
              {
                "title": "Connection Settings",
                "note": "Update your connection settings here",
                "icon": "settings",
                "fields": [
                  {
                    "type": "checkbox",
                    "label": "Hash and Encode Data",
                    "configKey": "hashData",
                    "default": true,
                    "note": "Disable it if you are sending hashed and encoded user email"
                  }
                ]
              }
            ]
          },
          {
            "groups": [
              {
                "title": "Connection mode",
                "note": [
                  "Update how you want to route events from your source to destination. ",
                  {
                    "text": "Get help deciding.",
                    "link": "https://www.rudderstack.com/docs/destinations/rudderstack-connection-modes/"
                  }
                ],
                "icon": "sliders",
                "fields": []
              }
            ]
          }
        ]
      },
      {
        "title": "Configuration settings",
        "note": "Manage the settings for your destination",
        "sections": [
          {
            "title": "Destination settings",
            "note": "Configure advanced destination-specific settings here",
            "icon": "settings",
            "groups": [
              {
                "title": "Optional configuration settings",
                "fields": [
                  {
                    "type": "textInput",
                    "label": "Deduplication Key",
                    "configKey": "deduplicationKey",
                    "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
                    "required": false,
                    "placeholder": "e.g: messageId",
                    "footerNote": "By default, RudderStack will send messageId as the event_id field. You can utilize this input, to specify another field value sent via payload, to be used instead. For example if properties.eventId is mentioned, Rudderstack will map from message.properties.eventId"
                  }
                ]
              }
            ]
          },
          {
            "title": "Other settings",
            "note": "Configure advanced RudderStack features here",
            "icon": "otherSettings",
            "groups": [
              {
                "title": "OneTrust consent settings",
                "note": [
                  "Enter your OneTrust consent category IDs if you have them configured. The support for category names is deprecated. We recommend using the category IDs instead of the names as IDs are unique and less likely to change over time, making them a more reliable choice.",
                  {
                    "text": "Learn more ",
                    "link": "https://www.rudderstack.com/docs/sources/event-streams/sdks/consent-manager/onetrust/"
                  },
                  "about RudderStack's OneTrust Consent Management feature."
                ],
                "fields": [
                  {
                    "type": "tagInput",
                    "label": "Consent categories",
                    "note": "Input your OneTrust category IDs by pressing 'Enter' after each entry.",
                    "configKey": "oneTrustCookieCategories",
                    "tagKey": "oneTrustCookieCategory",
                    "placeholder": "e.g: C0001",
                    "default": [
                      {
                        "oneTrustCookieCategory": ""
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "title": "Event mapping",
        "note": "Map RudderStack Events to Linkedin Ads Conversion",
        "hideEditIcon": true,
        "sections": [
          {
            "groups": [
              {
                "title": "RudderStack Event name to Linkedin Ads Conversion Rule Id mappings",
                "fields": [
                  {
                    "type": "redirect",
                    "redirectGroupKey": "conversionMapping",
                    "label": "Events mapping",
                    "note": "Map RudderStack events to Linkedin Ads Conversion Rule Id"
                  }
                ]
              }
            ]
          }
        ]
      }
    ],
    "sdkTemplate": {
      "title": "Web SDK settings",
      "note": "not visible in the ui",
      "fields": []
    },
    "redirectGroups": {
      "conversionMapping": {
        "fields": [
          {
            "type": "mapping",
            "label": "Map your RudderStack Events to Linkedin Ads Conversion",
            "note": "Enter the input event name which you want to map with a Linkedin Ads Conversion Rule Id",
            "configKey": "conversionMapping",
            "default": [],
            "columns": [
              {
                "type": "textInput",
                "key": "from",
                "label": "RudderStack Event",
                "placeholder": "e.g: Product Viewed"
              },
              {
                "type": "textInput",
                "key": "to",
                "label": "Linkedin Ads Conversion Rule Id",
                "placeholder": "e.g: 15716890"
              }
            ]
          }
        ]
      }
    }
  }
}
