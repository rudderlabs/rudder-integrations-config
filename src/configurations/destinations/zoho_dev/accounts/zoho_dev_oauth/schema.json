{
  "optionsSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["region"],
    "type": "object",
    "properties": {
      "region": {
        "type": "string",
        "enum": ["US", "EU", "IN"],
        "default": "US"
      },
      "accountName": {
        "type": "string"
      }
    }
  },
  "secretSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["accessToken"],
    "type": "object",
    "properties": {
      "accessToken": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
      }
    }
  }
}
