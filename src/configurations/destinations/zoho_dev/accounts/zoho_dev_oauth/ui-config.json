{
  "name": "OAuth",
  "description": "Grant third-party access without sharing passwords",
  "icon": "key",
  "recommended": true,
  "form": {
    "title": "Create account to connect",
    "fields": [
      {
        "component": "textField",
        "label": "Account name",
        "placeholder": "e.g: Zoho oauth dev",
        "key": "accountName",
        "optional": true
      },
      {
        "component": "selectField",
        "label": "Region",
        "key": "region",
        "options": [
          {
            "label": "US",
            "value": "us"
          },
          {
            "label": "EU",
            "value": "eu"
          }
        ],
        "default": "us"
      }
    ]
  }
}
