{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "License ID",
          "value": "licenseId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$",
          "regexErrorMessage": "License ID length should be less than 100 characters",
          "required": true,
          "placeholder": "e.g: 0c739ebb-XXXX-XXXX-XXXX-a5b5eb272474",
          "secret": true
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "defaultCheckbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ]
    },
    {
      "title": "Other Settings",
      "fields": [
        {
          "type": "checkbox",
          "label": "Record Live Chat Events",
          "value": "recordLiveChatEvents",
          "default": false,
          "footerNote": "Automatically records and sends the events from Live Chat to other enabled tools."
        },
        {
          "type": "singleSelect",
          "label": "List of Events",
          "value": "eventsList",
          "required": false,
          "placeholder": "CTA Viewed",
          "mode": "multiple",
          "options": [
            {
              "name": "Ready",
              "value": "ready"
            },
            {
              "name": "Availability Changed",
              "value": "availability_changed"
            },
            {
              "name": "Visibility Changed",
              "value": "visibility_changed"
            },
            {
              "name": "Customer Status Changed",
              "value": "customer_status_changed"
            },
            {
              "name": "New Event",
              "value": "new_event"
            },
            {
              "name": "Form Submitted",
              "value": "form_submitted"
            },
            {
              "name": "Rating Submitted",
              "value": "rating_submitted"
            },
            {
              "name": "Greeting Displayed",
              "value": "greeting_displayed"
            },
            {
              "name": "Greeting Hidden",
              "value": "greeting_hidden"
            },
            {
              "name": "Rich Message Button Clicked",
              "value": "rich_message_button_clicked"
            }
          ],
          "defaultOption": {
            "name": "New Event",
            "value": "new_event"
          },
          "preRequisiteField": {
            "name": "recordLiveChatEvents",
            "selectedValue": true
          }
        },
        {
          "type": "checkbox",
          "preRequisiteField": [
            {
              "name": "recordLiveChatEvents",
              "selectedValue": true
            }
          ],
          "label": "Update Event Name in track call",
          "value": "updateEventNames",
          "default": false,
          "footerNote": "Use this setting to update the event name in track call"
        },
        {
          "type": "dynamicSelectForm",
          "preRequisiteField": [
            {
              "name": "recordLiveChatEvents",
              "selectedValue": true
            },
            {
              "name": "updateEventNames",
              "selectedValue": true
            }
          ],
          "label": "Mapping to update the Event Name in track call",
          "labelLeft": "Event Name",
          "labelRight": "Standard Events",
          "value": "eventsToStandard",
          "keyLeft": "from",
          "keyRight": "to",
          "required": false,
          "placeholderLeft": "e.g: Submit",
          "options": [
            {
              "name": "Ready",
              "value": "ready"
            },
            {
              "name": "Availability Changed",
              "value": "availability_changed"
            },
            {
              "name": "Visibility Changed",
              "value": "visibility_changed"
            },
            {
              "name": "Customer Status Changed",
              "value": "customer_status_changed"
            },
            {
              "name": "New Event",
              "value": "new_event"
            },
            {
              "name": "Form Submitted",
              "value": "form_submitted"
            },
            {
              "name": "Rating Submitted",
              "value": "rating_submitted"
            },
            {
              "name": "Greeting Displayed",
              "value": "greeting_displayed"
            },
            {
              "name": "Greeting Hidden",
              "value": "greeting_hidden"
            },
            {
              "name": "Rich Message Button Clicked",
              "value": "rich_message_button_clicked"
            }
          ]
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "consentManagement",
          "label": "Consent management settings",
          "footerNote": "We recommend using IDs instead of names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "singleSelect",
              "label": "Consent management provider",
              "value": "provider",
              "options": [
                {
                  "name": "Custom",
                  "value": "custom"
                },
                {
                  "name": "Ketch",
                  "value": "ketch"
                },
                {
                  "name": "OneTrust",
                  "value": "oneTrust"
                }
              ],
              "defaultOption": {
                "name": "OneTrust",
                "value": "oneTrust"
              },
              "required": true
            },
            {
              "type": "singleSelect",
              "label": "the required consent logic",
              "value": "resolutionStrategy",
              "options": [
                {
                  "name": "AND",
                  "value": "and"
                },
                {
                  "name": "OR",
                  "value": "or"
                }
              ],
              "required": true,
              "variant": "badge",
              "preRequisites": {
                "fields": [
                  {
                    "configKey": "provider",
                    "value": "custom"
                  }
                ]
              }
            },
            {
              "type": "dynamicCustomForm",
              "value": "consents",
              "label": "Enter consent category IDs",
              "customFields": [
                {
                  "type": "textInput",
                  "placeholder": "Marketing",
                  "value": "consent",
                  "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
                  "required": false
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
