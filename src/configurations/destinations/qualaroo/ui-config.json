{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Customer ID",
          "value": "customerId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$",
          "regexErrorMessage": "Invalid Customer ID",
          "required": true,
          "placeholder": "e.g. 92X02",
          "secret": true,
          "footerNote": "Customer ID is part of your Qualaroo javascript library URL. Your Customer ID would be 92102 if your URL is: https://cl.qualaroo.com/ki.js/92102/j8N.js"
        },
        {
          "type": "textInput",
          "label": "Site Token",
          "value": "siteToken",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$",
          "regexErrorMessage": "Invalid Site Token",
          "required": true,
          "placeholder": "e.g. jXN",
          "secret": true,
          "footerNote": "Site Token is part of your Qualaroo javascript library URL. Your Site Token would be j8N if your URL is: https://cl.qualaroo.com/ki.js/92102/j8N.js"
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "checkbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ]
    },
    {
      "title": "Event Settings",
      "fields": [
        {
          "type": "checkbox",
          "label": "Record Qualaroo Events",
          "value": "recordQualarooEvents",
          "default": false,
          "footerNote": "Enable this to sends the Qualaroo callback events to other enabled destinations."
        },
        {
          "type": "singleSelect",
          "label": "List of Events",
          "value": "eventsList",
          "required": false,
          "placeholder": "Show",
          "mode": "multiple",
          "options": [
            {
              "name": "Show",
              "value": "show"
            },
            {
              "name": "Close",
              "value": "close"
            },
            {
              "name": "Submit",
              "value": "submit"
            },
            {
              "name": "No Target Match",
              "value": "noTargetMatch"
            }
          ],
          "defaultOption": {
            "name": "Show",
            "value": "show"
          },
          "preRequisiteField": {
            "name": "recordQualarooEvents",
            "selectedValue": true
          }
        },
        {
          "type": "checkbox",
          "preRequisiteField": [
            {
              "name": "recordQualarooEvents",
              "selectedValue": true
            }
          ],
          "label": "Update Event Name in track call",
          "value": "updateEventNames",
          "default": false,
          "footerNote": "Use this setting to update the event name in track call"
        },
        {
          "type": "dynamicSelectForm",
          "preRequisiteField": [
            {
              "name": "recordQualarooEvents",
              "selectedValue": true
            },
            {
              "name": "updateEventNames",
              "selectedValue": true
            }
          ],
          "label": "Mapping to update the Event Name in track call",
          "labelLeft": "Event Name",
          "labelRight": "Standard Events",
          "value": "eventsToStandard",
          "keyLeft": "from",
          "keyRight": "to",
          "required": false,
          "placeholderLeft": "e.g: survey showed",
          "options": [
            {
              "name": "Show",
              "value": "show"
            },
            {
              "name": "Close",
              "value": "close"
            },
            {
              "name": "Submit",
              "value": "submit"
            },
            {
              "name": "No Target Match",
              "value": "noTargetMatch"
            }
          ]
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Consent Categories",
          "footerNote": "The support for category names is deprecated. We recommend using the category IDs instead of the names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "C0001",
              "value": "oneTrustCookieCategory",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "label": "Category ID",
              "required": false
            }
          ]
        }
      ]
    }
  ]
}
