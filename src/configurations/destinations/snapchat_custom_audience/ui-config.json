{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Segment Id",
          "value": "segmentId",
          "regex": "^(.{1,100})$",
          "regexErrorMessage": "Invalid Segment Id",
          "required": true,
          "placeholder": "e.g. 4996042382964722",
          "secret": true
        }
      ]
    },
    {
      "title": "Event Settings",
      "fields": [
        {
          "type": "singleSelect",
          "label": "Schema",
          "value": "schema",
          "required": true,
          "mode": "single",
          "options": [
            { "name": "Email", "value": "email" },
            { "name": "Phone", "value": "phone" },
            { "name": "Mobile Ad Id", "value": "mobileAdId" }
          ],
          "defaultOption": { "name": "Email", "value": "email" },
          "footerNote": "Schema of your Audience"
        },
        {
          "type": "checkbox",
          "label": "Disable Hashing",
          "value": "disableHashing",
          "default": false
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Cookie Categories",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "Marketing",
              "value": "oneTrustCookieCategory",
              "label": "Category Name/ID",
              "required": false
            }
          ]
        }
      ]
    }
  ]
}
