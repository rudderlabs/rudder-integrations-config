{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["segmentId", "schema"],
    "type": "object",
    "properties": {
      "segmentId": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "schema": { "type": "string", "enum": ["email", "phone", "mobileAdId"], "default": "email" },
      "disableHashing": { "type": "boolean", "default": false },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      },
      "consentManagement": {
        "type": "object",
        "properties": {
          "cloud": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "provider": {
                  "type": "string",
                  "enum": ["custom", "ketch", "oneTrust"],
                  "default": "oneTrust"
                },
                "consents": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "consent": {
                        "type": "string",
                        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
                      }
                    }
                  }
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "provider": {
                        "const": "custom"
                      }
                    },
                    "required": ["provider"]
                  },
                  "then": {
                    "properties": {
                      "resolutionStrategy": {
                        "type": "string",
                        "enum": ["and", "or"]
                      }
                    },
                    "required": ["resolutionStrategy"]
                  }
                }
              ]
            }
          },
          "warehouse": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "provider": {
                  "type": "string",
                  "enum": ["custom", "ketch", "oneTrust"],
                  "default": "oneTrust"
                },
                "consents": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "consent": {
                        "type": "string",
                        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
                      }
                    }
                  }
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "provider": {
                        "const": "custom"
                      }
                    },
                    "required": ["provider"]
                  },
                  "then": {
                    "properties": {
                      "resolutionStrategy": {
                        "type": "string",
                        "enum": ["and", "or"]
                      }
                    },
                    "required": ["resolutionStrategy"]
                  }
                }
              ]
            }
          },
          "shopify": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "provider": {
                  "type": "string",
                  "enum": ["custom", "ketch", "oneTrust"],
                  "default": "oneTrust"
                },
                "consents": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "consent": {
                        "type": "string",
                        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
                      }
                    }
                  }
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "provider": {
                        "const": "custom"
                      }
                    },
                    "required": ["provider"]
                  },
                  "then": {
                    "properties": {
                      "resolutionStrategy": {
                        "type": "string",
                        "enum": ["and", "or"]
                      }
                    },
                    "required": ["resolutionStrategy"]
                  }
                }
              ]
            }
          }
        }
      },
      "connectionMode": {
        "type": "object",
        "properties": {
          "shopify": { "type": "string", "enum": ["cloud"] },
          "cloud": { "type": "string", "enum": ["cloud"] },
          "warehouse": { "type": "string", "enum": ["cloud"] }
        }
      }
    }
  }
}
