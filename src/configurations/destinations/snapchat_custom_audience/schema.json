{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["segmentId", "schema"],
    "type": "object",
    "properties": {
      "segmentId": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "schema": {
        "type": "string",
        "enum": ["email", "phone", "mobileAdId"],
        "default": "email"
      },
      "disableHashing": {
        "type": "boolean",
        "default": false
      },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      }
    }
  }
}
