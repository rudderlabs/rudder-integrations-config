{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["accountId", "clientId", "clientSecret", "staticListId"],
    "type": "object",
    "properties": {
      "accountId": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "clientId": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "clientSecret": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "staticListId": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      },
      "connectionMode": {
        "type": "object",
        "properties": {
          "shopify": { "type": "string", "enum": ["cloud"] },
          "cloud": { "type": "string", "enum": ["cloud"] },
          "warehouse": { "type": "string", "enum": ["cloud"] }
        }
      }
    }
  }
}
