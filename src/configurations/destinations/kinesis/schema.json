{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["region", "stream", "iamRoleARN"],
    "properties": {
      "region": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "stream": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "roleBasedAuth": { "type": "boolean" },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      }
    },
    "allOf": [
      {
        "if": {
          "properties": { "roleBasedAuth": { "const": true } },
          "required": ["roleBasedAuth"]
        },
        "then": {
          "required": ["iamRoleARN"],
          "properties": {
            "iamRoleARN": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      },
      {
        "if": {
          "properties": { "roleBasedAuth": { "const": true } },
          "required": ["roleBasedAuth", "accessKeyID"]
        },
        "then": {
          "properties": {
            "accessKeyID": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            },
            "accessKey": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      }
    ],
    "additionalProperties": true
  }
}
