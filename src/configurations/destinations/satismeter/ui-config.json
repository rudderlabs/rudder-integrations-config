{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Write Key",
          "value": "writeKey",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$",
          "regexErrorMessage": "Invalid Write Key.",
          "required": true,
          "placeholder": "e.g. 8ebfu2tr2833r08gfb",
          "secret": true,
          "footerNote": "Write key is used for authentication. It can be found inside the script under installation in settings."
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "defaultCheckbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ]
    },
    {
      "title": "Event Settings",
      "fields": [
        {
          "type": "checkbox",
          "label": "Identify Anonymous Users",
          "value": "identifyAnonymousUsers",
          "default": false,
          "footerNote": "Enable this to identify anonymous users by using anonymousId as userId."
        },
        {
          "type": "checkbox",
          "label": "Record Satismeter Events",
          "value": "recordSatismeterEvents",
          "default": false,
          "footerNote": "Enable this to sends the Satismeter callback events to other enabled destinations."
        },
        {
          "type": "singleSelect",
          "label": "List of Events",
          "value": "eventsList",
          "required": false,
          "placeholder": "Show",
          "mode": "multiple",
          "options": [
            {
              "name": "Display",
              "value": "display"
            },
            {
              "name": "Dismiss",
              "value": "dismiss"
            },
            {
              "name": "Progress",
              "value": "progress"
            },
            {
              "name": "Complete",
              "value": "complete"
            }
          ],
          "defaultOption": {
            "name": "Display",
            "value": "display"
          },
          "preRequisiteField": {
            "name": "recordSatismeterEvents",
            "selectedValue": true
          }
        },
        {
          "type": "checkbox",
          "preRequisiteField": [
            {
              "name": "recordSatismeterEvents",
              "selectedValue": true
            }
          ],
          "label": "Update Event Name in track call",
          "value": "updateEventNames",
          "default": false,
          "footerNote": "Use this setting to update the event name in track call"
        },
        {
          "type": "dynamicSelectForm",
          "preRequisiteField": [
            {
              "name": "recordSatismeterEvents",
              "selectedValue": true
            },
            {
              "name": "updateEventNames",
              "selectedValue": true
            }
          ],
          "label": "Mapping to update the Event Name in track call",
          "labelLeft": "Event Name",
          "labelRight": "Standard Events",
          "value": "eventsToStandard",
          "keyLeft": "from",
          "keyRight": "to",
          "required": false,
          "placeholderRight": "e.g: Survey Showed",
          "options": [
            {
              "name": "Display",
              "value": "display"
            },
            {
              "name": "Dismiss",
              "value": "dismiss"
            },
            {
              "name": "Progress",
              "value": "progress"
            },
            {
              "name": "Complete",
              "value": "complete"
            }
          ]
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Consent Categories",
          "footerNote": "The support for category names is deprecated. We recommend using the category IDs instead of the names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "C0001",
              "value": "oneTrustCookieCategory",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "label": "Category ID",
              "required": false
            }
          ]
        }
      ]
    }
  ]
}
