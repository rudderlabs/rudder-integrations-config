{
  "name": "BINGADS_OFFLINE_CONVERSION",
  "displayName": "BingAds Offline Conversion",
  "config": {
    "supportsVisualMapper": true,
    "auth": { 
    "type": "OAuth",
    "rudderScopes": ["delivery"] 
    },
    "saveDestinationResponse": true,
    "includeKeys": ["oneTrustCookieCategories"],
    "excludeKeys": [],
    "supportedSourceTypes": ["warehouse", "shopify"],
    "supportedMessageTypes": { "cloud": ["record"] },
    "syncBehaviours": ["mirror"],
    "disableJsonMapper": true,
    "supportedConnectionModes": {
      "shopify": ["cloud"],
      "warehouse": ["cloud"]
    },
    "destConfig": {
      "defaultConfig": [
        "rudderAccountId",
        "customerAccountId",
        "customerId",
        "oneTrustCookieCategories"
      ],
      "cloud": ["connectionMode"],
      "warehouse": ["connectionMode"],
      "shopify": ["connectionMode"]
    }
  },
  "options": { "isBeta": true }
}
