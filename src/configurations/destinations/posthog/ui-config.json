{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Team API KEY",
          "value": "teamApiKey",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Team API KEY",
          "required": true,
          "placeholder": "e.g: K_HlRyXXIE73-TzXXX7LNDs0JGdwbknNGolFc3MdoAF",
          "secret": true
        },
        {
          "type": "textInput",
          "label": "Instance URL",
          "value": "yourInstance",
          "regex": "(?!.*\\.ngrok\\.io)^(.{0,100})$",
          "regexErrorMessage": "Invalid Instance URL",
          "placeholder": "e.g: https://app.posthog.com",
          "secret": true
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "checkbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "required": false,
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Enable Local Storage for Persistence",
          "value": "enableLocalStoragePersistence",
          "required": false,
          "default": false,
          "footerNote": "Enabling this will reduce the amount of data stored in cookies by storing it in local storage instead."
        },
        {
          "type": "singleSelect",
          "value": "personProfiles",
          "label": "Posthog Person Profile Option",
          "required": false,
          "options": [
            {
              "name": "Always",
              "value": "always"
            },
            {
              "name": "Identified Only",
              "value": "identified_only"
            }
          ],
          "defaultOption": {
            "name": "Always",
            "value": "always"
          }
        },
        {
          "type": "checkbox",
          "label": "Enable autocapture with PostHog",
          "value": "autocapture",
          "required": false,
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Allow PostHog to automatically capture pageview events",
          "value": "capturePageView",
          "required": false,
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Disable session recoding",
          "value": "disableSessionRecording",
          "required": false,
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Disable PostHog cookie",
          "value": "disableCookie",
          "required": false,
          "default": false
        },
        {
          "type": "dynamicForm",
          "label": "Additional headers to pass with XHR requests to PostHog API",
          "labelLeft": "Key",
          "labelRight": "Value",
          "keyLeft": "key",
          "keyRight": "value",
          "value": "xhrHeaders"
        },
        {
          "type": "dynamicCustomForm",
          "value": "propertyBlackList",
          "label": "Property black list",
          "customFields": [
            {
              "type": "textInput",
              "label": "Property",
              "value": "property",
              "regex": ".*",
              "required": false
            }
          ]
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "consentManagement",
          "label": "Consent management settings",
          "footerNote": "We recommend using IDs instead of names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "singleSelect",
              "label": "Consent management provider",
              "value": "provider",
              "options": [
                {
                  "name": "Custom",
                  "value": "custom"
                },
                {
                  "name": "Ketch",
                  "value": "ketch"
                },
                {
                  "name": "OneTrust",
                  "value": "oneTrust"
                }
              ],
              "defaultOption": {
                "name": "OneTrust",
                "value": "oneTrust"
              },
              "required": true
            },
            {
              "type": "singleSelect",
              "label": "the required consent logic",
              "value": "resolutionStrategy",
              "options": [
                {
                  "name": "AND",
                  "value": "and"
                },
                {
                  "name": "OR",
                  "value": "or"
                }
              ],
              "required": true,
              "variant": "badge",
              "preRequisites": {
                "fields": [
                  {
                    "configKey": "provider",
                    "value": "custom"
                  }
                ]
              }
            },
            {
              "type": "dynamicCustomForm",
              "value": "consents",
              "label": "Enter consent category IDs",
              "customFields": [
                {
                  "type": "textInput",
                  "placeholder": "Marketing",
                  "value": "consent",
                  "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
                  "required": false
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "fields": [
        {
          "type": "checkbox",
          "label": "Use Updated Mapping for Group calls",
          "value": "useV2Group",
          "default": false,
          "footerNote": "It is recomended to set this to on as we are deprecating support for the old mapping soon."
        }
      ]
    }
  ]
}
