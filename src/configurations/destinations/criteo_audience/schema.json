{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["adAccountId", "audienceId", "audienceType"],
    "type": "object",
    "properties": {
      "adAccountId": {
        "type": "object",
        "properties": { "warehouse": { "type": "string", "pattern": "^[0-9]+$" } }
      },
      "audienceId": {
        "type": "object",
        "properties": { "cloud": { "type": "string", "pattern": "^[0-9]+$" } }
      },
      "audienceType": {
        "type": "string",
        "pattern": "^(email|madid|identityLink|gum)$",
        "default": "email"
      },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      }
    },
    "anyOf": [
      {
        "if": {
          "properties": { "audienceType": { "const": "gum" } },
          "required": ["audienceType"]
        },
        "then": {
          "properties": {
            "gumCallerId": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$"
            }
          },
          "required": []
        }
      }
    ]
  }
}
