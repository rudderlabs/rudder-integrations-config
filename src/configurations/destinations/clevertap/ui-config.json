{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Account ID",
          "value": "accountId",
          "regex": ".*",
          "required": true,
          "placeholder": "e.g. 6Z2-RRZ-KZ6Z",
          "footerNote": "Your AccountId"
        },
        {
          "type": "textInput",
          "label": "Passcode",
          "value": "passcode",
          "regex": ".*",
          "required": true,
          "placeholder": "e.g. WXE-ISD-GHUL",
          "secret": true,
          "footerNote": "Your Passcode"
        },
        {
          "type": "textInput",
          "label": "Account Token",
          "value": "accountToken",
          "regex": ".*",
          "placeholder": "e.g. 1XX-bX6",
          "secret": true,
          "footerNote": "(Note: Currently this setting is applicable only for Mobile SDK's in device mode)"
        },
        {
          "type": "checkbox",
          "label": "Enable tracking for anonymous users",
          "value": "trackAnonymous",
          "default": false,
          "footerNote": "Enable this option to track anonymous users"
        },
        {
          "type": "checkbox",
          "label": "Use Clevertap ObjectId for Mapping",
          "value": "enableObjectIdMapping",
          "default": false,
          "footerNote": "Enable this option to use Clevertap objectId for mapping, please refer to docs for further info"
        },
        {
          "type": "singleSelect",
          "label": "Region",
          "value": "region",
          "options": [
            {
              "name": "None",
              "value": "none"
            },
            {
              "name": "India",
              "value": "in1"
            },
            {
              "name": "Singapore",
              "value": "sg1"
            },
            {
              "name": "US",
              "value": "us1"
            },
            {
              "name": "South Korea",
              "value": "sk1"
            },
            {
              "name": "Indonesia",
              "value": "aps3"
            },
            {
              "name": "Middle East",
              "value": "mec1"
            }
          ],
          "defaultOption": {
            "name": "None",
            "value": "none"
          },
          "required": false
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "checkbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": false
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Cookie Categories",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "C0001",
              "value": "oneTrustCookieCategory",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "label": "Category ID",
              "required": false,
              "footerNote": "The support for category name is deprecated. We recommend using the category ID instead of the name as IDs are unique and less likely to change over time, making them a more reliable choice."
            }
          ]
        }
      ]
    }
  ]
}
