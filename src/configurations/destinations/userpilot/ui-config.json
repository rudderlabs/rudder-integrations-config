{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "App Token",
          "value": "token",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid App Token",
          "required": true,
          "placeholder": "e.g: NX-XXXX"
        },
        {
          "type": "textInput",
          "label": "JS SDK ENDPOINT",
          "value": "endpoint",
          "regex": "^(https?:\\/\\/)[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$",
          "regexErrorMessage": "Invalid API Endpoint URL. It should be a valid URL starting with http:// or https://",
          "required": false,
          "placeholder": "e.g: wss://api.example.com/ws",
          "secret": false,
          "description": "Custom endpoint for the JavaScript SDK",
          "dependsOn": [
            {
              "field": "connectionMode",
              "value": "device"
            }
          ]
        },
        {
          "type": "textInput",
          "label": "API KEY",
          "value": "apiKey",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid API Key",
          "required": true,
          "placeholder": "e.g: 21axxxxxxxxxxxxxx",
          "secret": true,
          "description": "API Key for authenticating with the HTTP API",
          "dependsOn": [
            {
              "field": "connectionMode",
              "value": "cloud"
            }
          ]
        },
        {
          "type": "textInput",
          "label": "HTTP API ENDPOINT",
          "value": "apiEndpoint",
          "regex": "^(https?:\\/\\/)[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$",
          "regexErrorMessage": "Invalid API Endpoint URL. It should be a valid URL starting with http:// or https://",
          "required": true,
          "placeholder": "e.g: https://analytex.userpilot.io",
          "default": "https://analytex.userpilot.io",
          "secret": false,
          "description": "Endpoint for the HTTP API",
          "dependsOn": [
            {
              "field": "connectionMode",
              "value": "cloud",
              "required": true
            }
          ]
        },
        {
          "type": "singleSelect",
          "label": "CONNECTION MODE",
          "value": "connectionMode",
          "options": [
            {
              "label": "Device Mode",
              "value": "device"
            },
            {
              "label": "Cloud Mode",
              "value": "cloud"
            }
          ],
          "required": true,
          "default": "device"
        }
      ]
    },
    {
      "title": "Native SDK",
      "subtitle": "Applicable only for device-mode integrations",
      "fields": [
        {
          "type": "defaultCheckbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ],
      "dependsOn": [
        {
          "field": "connectionMode",
          "value": "device"
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "consentManagement",
          "label": "Consent management settings",
          "footerNote": "We recommend using IDs instead of names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "singleSelect",
              "label": "Consent management provider",
              "value": "provider",
              "options": [
                {
                  "name": "Custom",
                  "value": "custom"
                },
                {
                  "name": "iubenda",
                  "value": "iubenda"
                },
                {
                  "name": "Ketch",
                  "value": "ketch"
                },
                {
                  "name": "OneTrust",
                  "value": "oneTrust"
                }
              ],
              "defaultOption": {
                "name": "OneTrust",
                "value": "oneTrust"
              },
              "required": true
            },
            {
              "type": "singleSelect",
              "label": "the required consent logic",
              "value": "resolutionStrategy",
              "options": [
                {
                  "name": "AND",
                  "value": "and"
                },
                {
                  "name": "OR",
                  "value": "or"
                }
              ],
              "required": true,
              "variant": "badge",
              "preRequisites": {
                "fields": [
                  {
                    "configKey": "provider",
                    "value": "custom"
                  }
                ]
              }
            },
            {
              "type": "dynamicCustomForm",
              "value": "consents",
              "label": "Enter consent category IDs",
              "customFields": [
                {
                  "type": "textInput",
                  "placeholder": "Marketing",
                  "value": "consent",
                  "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
                  "required": false
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
