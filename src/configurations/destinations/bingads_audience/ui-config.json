{
  "uiConfig": [
    {
      "title": "Audience Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Customer Account Id",
          "value": "customerAccountId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$",
          "regexErrorMessage": "Invalid Customer Account Id",
          "required": true,
          "placeholder": "e.g. 532144445",
          "secret": false,
          "footerNote": "Your Customer Account Id (account identifier)"
        },
        {
          "type": "textInput",
          "label": "Customer Id",
          "value": "customerId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$",
          "regexErrorMessage": "Invalid Customer Id",
          "required": true,
          "placeholder": "e.g. 343434598",
          "secret": false,
          "footerNote": "Your Customer Id"
        },
        {
          "type": "textInput",
          "label": "Audience Id",
          "value": "audienceId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$",
          "regexErrorMessage": "Invalid Audience Id",
          "required": true,
          "placeholder": "e.g. 532145",
          "secret": false,
          "footerNote": "The audience id of the audience to which you want to sync the data"
        },
        {
          "type": "checkbox",
          "label": "Hash Email",
          "value": "hashEmail",
          "default": true,
          "footerNote": "Toggle it off if you are sending hashed Email"
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Cookie Categories",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "C0001",
              "value": "oneTrustCookieCategory",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "label": "Category ID",
              "required": false,
              "footerNote": "The support for category name is deprecated. We recommend using the category ID instead of the name as IDs are unique and less likely to change over time, making them a more reliable choice."
            }
          ]
        }
      ]
    }
  ]
}
