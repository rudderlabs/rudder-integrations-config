{
  "uiConfig": [
    {
      "title": "Audience Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Customer Account Id",
          "value": "customerAccountId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$",
          "regexErrorMessage": "Invalid Customer Account Id",
          "required": true,
          "placeholder": "e.g. 532XXXX45",
          "secret": false,
          "footerNote": "Your Customer Account Id (account identifier)"
        },
        {
          "type": "textInput",
          "label": "Customer Id",
          "value": "customerId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$",
          "regexErrorMessage": "Invalid Customer Id",
          "required": true,
          "placeholder": "e.g. 343XXX598",
          "secret": false,
          "footerNote": "Your Customer Id"
        },
        {
          "type": "textInput",
          "label": "Audience Id",
          "value": "audienceId",
          "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^[0-9]+$",
          "regexErrorMessage": "Invalid Audience Id",
          "required": true,
          "placeholder": "e.g. 53XXXX5",
          "secret": false,
          "footerNote": "The audience id of the audience to which you want to sync the data"
        },
        {
          "type": "checkbox",
          "label": "Hash Email",
          "value": "hashEmail",
          "default": true,
          "footerNote": "Toggle it off if you are sending hashed Email"
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "consentManagement",
          "label": "Consent management settings",
          "footerNote": "We recommend using IDs instead of names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "singleSelect",
              "label": "Consent management provider",
              "value": "provider",
              "options": [
                {
                  "name": "Custom",
                  "value": "custom"
                },
                {
                  "name": "iubenda",
                  "value": "iubenda"
                },
                {
                  "name": "Ketch",
                  "value": "ketch"
                },
                {
                  "name": "OneTrust",
                  "value": "oneTrust"
                }
              ],
              "defaultOption": {
                "name": "OneTrust",
                "value": "oneTrust"
              },
              "required": true
            },
            {
              "type": "singleSelect",
              "label": "the required consent logic",
              "value": "resolutionStrategy",
              "options": [
                {
                  "name": "AND",
                  "value": "and"
                },
                {
                  "name": "OR",
                  "value": "or"
                }
              ],
              "required": true,
              "variant": "badge",
              "preRequisites": {
                "fields": [
                  {
                    "configKey": "provider",
                    "value": "custom"
                  }
                ]
              }
            },
            {
              "type": "dynamicCustomForm",
              "value": "consents",
              "label": "Enter consent category IDs",
              "customFields": [
                {
                  "type": "textInput",
                  "placeholder": "Marketing",
                  "value": "consent",
                  "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
                  "required": false
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
