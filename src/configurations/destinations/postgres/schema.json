          "properties": {
            "bucketProvider": { "const": "GCS" },
            "useRudderStorage": { "const": false }
          },
          "required": ["bucketProvider", "useRudderStorage"]
        },
        "then": {
          "properties": {
            "bucketName": {
              "type": "string",
              "pattern": "(^env[.].+)|^((?!goog)(?!.*google.*)(?!^(\\d+(\\.|$)){4}$)(?!.*\\.\\..*)[a-z0-9][a-z0-9-._]{1,61}[a-z0-9])$"
            },
            "credentials": { "type": "string", "pattern": "(^env[.].+)|.+" }
          },
          "required": ["bucketName", "credentials"]
        }
      },
      {
        "if": {
          "properties": {
            "bucketProvider": { "const": "AZURE_BLOB" },
            "useRudderStorage": { "const": false }
          },
          "required": ["bucketProvider", "useRudderStorage"]
        },
        "then": {
          "properties": {
            "containerName": {
              "type": "string",
              "pattern": "(^env[.].+)|^(?=.{3,63}$)[a-z0-9]+(-[a-z0-9]+)*$"
            },
            "accountName": { "type": "string", "pattern": "(^env[.].+)|^(.{1,100})$" }
          },
          "required": ["containerName", "accountName"],
          "anyOf": [
            {
              "properties": {
