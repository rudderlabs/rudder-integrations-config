{
  "uiConfig": {
    "name": "OAuth",
    "isOAuth": true,
    "description": "Grant third-party access without sharing passwords",
    "icon": "key",
    "recommended": true,
    "form": {
      "title": "Create account to connect",
      "fields": [
        {
          "component": "textField",
          "label": "Account name",
          "placeholder": "e.g: Salesforce oauth dev",
          "key": "name"
        },
        {
          "component": "selectField",
          "label": "Region",
          "key": ["options", "region"],
          "options": [
            {
              "label": "US",
              "value": "US"
            },
            {
              "label": "EU",
              "value": "EU"
            },
            {
              "label": "IN",
              "value": "IN"
            }
          ],
          "default": "US"
        },
        {
          "component": "checkbox",
          "label": "Sandbox",
          "key": ["options", "isSandbox"],
          "default": false
        }
      ]
    }
  }
}
