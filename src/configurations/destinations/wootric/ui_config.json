{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Username",
          "value": "username",
          "regex": "^(.{1,100})$",
          "regexErrorMessage": "Invalid User",
          "required": true,
          "placeholder": "e.g. test@gmail.com",
          "secret": false
        },
        {
          "type": "textInput",
          "label": "Password",
          "value": "password",
          "regex": ".*",
          "required": true,
          "placeholder": "e.g. password@123",
          "secret": true
        },
        {
          "type": "textInput",
          "label": "Account Token",
          "value": "accountToken",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Account Token",
          "required": true,
          "placeholder": "e.g. NPS-123456",
          "secret": true
        }
      ]
    }
  ]
}
