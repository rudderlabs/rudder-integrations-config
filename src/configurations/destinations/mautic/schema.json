{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["userName", "password", "domainMethod", "lookUpField"],
    "type": "object",
    "properties": {
      "userName": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "password": { "type": "string", "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|.+" },
      "domainMethod": {
        "type": "string",
        "enum": ["subDomainNameOption", "domainNameOption"],
        "default": "subDomainNameOption"
      },
      "lookUpField": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      },
      "connectionMode": {
        "type": "object",
        "properties": {
          "android": { "type": "string", "enum": ["cloud"] },
          "ios": { "type": "string", "enum": ["cloud"] },
          "web": { "type": "string", "enum": ["cloud"] },
          "unity": { "type": "string", "enum": ["cloud"] },
          "amp": { "type": "string", "enum": ["cloud"] },
          "reactnative": { "type": "string", "enum": ["cloud"] },
          "flutter": { "type": "string", "enum": ["cloud"] },
          "cordova": { "type": "string", "enum": ["cloud"] },
          "shopify": { "type": "string", "enum": ["cloud"] },
          "cloud": { "type": "string", "enum": ["cloud"] },
          "warehouse": { "type": "string", "enum": ["cloud"] }
        }
      }
    },
    "allOf": [
      {
        "if": {
          "properties": { "domainMethod": { "const": "subDomainNameOption" } },
          "required": ["domainMethod"]
        },
        "then": {
          "properties": {
            "subDomainName": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
            }
          },
          "required": ["subDomainName"]
        }
      },
      {
        "if": {
          "properties": { "domainMethod": { "const": "domainNameOption" } },
          "required": ["domainMethod"]
        },
        "then": {
          "properties": {
            "domainName": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|(?!.*\\.ngrok\\.io)^(https?|ftp)://[^\\s/$.?#].[^\\s]*[^/]$"
            }
          },
          "required": ["domainName"]
        }
      }
    ]
  }
}
