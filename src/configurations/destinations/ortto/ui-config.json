                  },
                  {
                    "label": "Date",
                    "value": "date"
                  },
                  {
                    "label": "Time and date",
                    "value": "timeAndDate"
                  },
                  {
                    "label": "Boolean",
                    "value": "boolean"
                  },
                  {
                    "label": "Phone Number",
                    "value": "phone"
                  },
                  {
                    "label": "Single Select",
                    "value": "str"
                  },
                  {
                    "label": "Multi Select",
                    "value": "multiSelect"
                  },
                  {
                    "label": "Link",
                    "value": "link"
                  },
                  {
                    "label": "Object",
                    "value": "object"
                  }
                ],
                "default": "text"
              }
            ]
          }
        ]
      }
    }
  }
}
