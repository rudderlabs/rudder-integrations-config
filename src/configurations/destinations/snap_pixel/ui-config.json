{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Pixel ID",
          "value": "pixelId",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Pixel ID",
          "required": true,
          "placeholder": "e.g: 836d6231-XXXX-XXXX-XXXX-58545XXcad8e",
          "secret": true,
          "footerNote": "Your Pixel ID"
        },
        {
          "type": "singleSelect",
          "label": "Hashing Method",
          "value": "hashMethod",
          "placeholder": "NONE",
          "options": [
            {
              "name": "NONE",
              "value": "none"
            },
            {
              "name": "SHA-256",
              "value": "sha256"
            }
          ],
          "defaultOption": {
            "name": "NONE",
            "value": "none"
          }
        },
        {
          "type": "dynamicSelectForm",
          "label": "Mapping to trigger the Snap Pixel events for the respective events set here.",
          "labelLeft": "Event Name",
          "labelRight": "Snap Pixel Events",
          "value": "eventMappingFromConfig",
          "keyLeft": "from",
          "keyRight": "to",
          "required": false,
          "placeholderLeft": "e.g: Sign up completed",
          "options": [
            {
              "name": "PURCHASE",
              "value": "PURCHASE"
            },
            {
              "name": "SAVE",
              "value": "SAVE"
            },
            {
              "name": "START_CHECKOUT",
              "value": "START_CHECKOUT"
            },
            {
              "name": "ADD_CART",
              "value": "ADD_CART"
            },
            {
              "name": "VIEW_CONTENT",
              "value": "VIEW_CONTENT"
            },
            {
              "name": "ADD_BILLING",
              "value": "ADD_BILLING"
            },
            {
              "name": "SIGN_UP",
              "value": "SIGN_UP"
            },
            {
              "name": "SEARCH",
              "value": "SEARCH"
            },
            {
              "name": "PAGE_VIEW",
              "value": "PAGE_VIEW"
            },
            {
              "name": "SUBSCRIBE",
              "value": "SUBSCRIBE"
            },
            {
              "name": "AD_CLICK",
              "value": "AD_CLICK"
            },
            {
              "name": "AD_VIEW",
              "value": "AD_VIEW"
            },
            {
              "name": "COMPLETE_TUTORIAL",
              "value": "COMPLETE_TUTORIAL"
            },
            {
              "name": "LEVEL_COMPLETE",
              "value": "LEVEL_COMPLETE"
            },
            {
              "name": "INVITE",
              "value": "INVITE"
            },
            {
              "name": "LOGIN",
              "value": "LOGIN"
            },
            {
              "name": "ADD_BILLING",
              "value": "ADD_BILLING"
            },
            {
              "name": "SHARE",
              "value": "SHARE"
            },
            {
              "name": "RESERVE",
              "value": "RESERVE"
            },
            {
              "name": "ACHIEVEMENT_UNLOCKED",
              "value": "ACHIEVEMENT_UNLOCKED"
            },
            {
              "name": "ADD_TO_WISHLIST",
              "value": "ADD_TO_WISHLIST"
            },
            {
              "name": "LIST_VIEW",
              "value": "LIST_VIEW"
            },
            {
              "name": "APP_INSTALL",
              "value": "APP_INSTALL"
            },
            {
              "name": "APP_OPEN",
              "value": "APP_OPEN"
            },
            {
              "name": "SPENT_CREDITS",
              "value": "SPENT_CREDITS"
            },
            {
              "name": "RATE",
              "value": "RATE"
            },
            {
              "name": "START_TRIAL",
              "value": "START_TRIAL"
            }
          ]
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "defaultCheckbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Other Settings",
      "fields": [
        {
          "type": "checkbox",
          "label": "Customize Client Deduplication Key",
          "value": "enableDeduplication",
          "default": false,
          "footerNote": "Enable this setting to send the name of the key which will be used as clientDeduplicationId."
        },
        {
          "type": "textInput",
          "label": "Client Deduplication Field",
          "value": "deduplicationKey",
          "regex": ".*",
          "required": false,
          "placeholder": "e.g. properties.dedupKey",
          "preRequisiteField": {
            "name": "enableDeduplication",
            "selectedValue": true
          }
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Consent Category IDs",
          "footerNote": "The support for category names is deprecated. We recommend using the category IDs instead of the names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "C0001",
              "value": "oneTrustCookieCategory",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "label": "Category ID",
              "required": false
            }
          ],
          "preRequisites": {
            "featureFlags": [
              {
                "configKey": "AMP_enable-gcm",
                "value": false
              },
              {
                "configKey": "AMP_enable-gcm"
              }
            ],
            "featureFlagsCondition": "or"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "ketchConsentPurposes",
          "label": "Ketch Consent Purpose IDs",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "marketing",
              "value": "purpose",
              "label": "Purpose ID",
              "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
              "required": false
            }
          ],
          "preRequisites": {
            "featureFlags": [
              {
                "configKey": "AMP_enable-gcm",
                "value": false
              },
              {
                "configKey": "AMP_enable-gcm"
              }
            ],
            "featureFlagsCondition": "or"
          }
        }
      ]
    }
  ]
}
