{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["accountId"],
    "properties": {
      "accountId": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,50})$"
      },
      "enableHash": {
        "type": "boolean",
        "default": false
      },
      "connectionMode": {
        "type": "object",
        "properties": {
          "cloud": { "type": "string", "enum": ["cloud"] },
          "warehouse": { "type": "string", "enum": ["cloud"] }
        }
      }
    }
  }
}
