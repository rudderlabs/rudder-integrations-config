{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Account Id",
          "value": "accountId",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Account Id",
          "required": true,
          "placeholder": "e.g: 410057"
        },
        {
          "type": "checkbox",
          "label": "Single Page Application (SPA)?",
          "value": "isSPA",
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Send experiment viewed as track",
          "value": "sendExperimentTrack",
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Send experiment viewed as identify traits",
          "value": "sendExperimentIdentify",
          "default": false
        }
      ]
    },
    {
      "title": "Native SDK",
      "fields": [
        {
          "type": "defaultCheckbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Other Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Library Tolerance",
          "value": "libraryTolerance",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Library Tolerance",
          "placeholder": "e.g: 2000",
          "default": "2500"
        },
        {
          "type": "textInput",
          "label": "Setting Tolerance",
          "value": "settingsTolerance",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Setting Tolerance",
          "placeholder": "e.g: 2000",
          "default": "2000"
        },
        {
          "type": "checkbox",
          "label": "Use Existing jquery",
          "value": "useExistingJquery",
          "default": false
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Cookie Categories",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "Marketing",
              "value": "oneTrustCookieCategory",
              "label": "Category Name",
              "required": false
            }
          ]
        }
      ]
    }
  ]
}
