{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "accountManagementInput",
          "label": "Cloud-mode account",
          "value": "rudderAccountId",
          "required": true
        },
        {
          "type": "textInput",
          "label": "Pixel ID",
          "value": "pixelId",
          "regex": "^(.{1,50})$",
          "regexErrorMessage": "Length of Pixel ID must be below 50 characters.",
          "required": true,
          "secret": false,
          "placeholder": "e.g: 64XX34",
          "footerNote": "Pixel ID associated with request."
        },
        {
          "type": "dynamicCustomForm",
          "label": "Map RudderStack event name to Twitter event ID",
          "value": "twitterAdsEventNames",
          "customFields": [
            {
              "type": "textInput",
              "label": "RudderStack Event Name",
              "value": "rudderEventName",
              "regex": "^(.{0,100})$",
              "required": false,
              "placeholder": "e.g Order Completed",
              "footerNote": "Enter the RudderStack event name you want to map"
            },
            {
              "type": "textInput",
              "label": "Twitter Event ID",
              "value": "twitterEventId",
              "regex": "^(.{0,100})$",
              "required": false,
              "placeholder": "e.g obX21",
              "footerNote": "Enter the corresponding Twitter event Id"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "consentManagement",
          "label": "Consent management settings",
          "footerNote": "We recommend using IDs instead of names as IDs are unique and less likely to change over time, making them a more reliable choice.",
          "customFields": [
            {
              "type": "singleSelect",
              "label": "Consent management provider",
              "value": "provider",
              "options": [
                {
                  "name": "Custom",
                  "value": "custom"
                },
                {
                  "name": "iubenda",
                  "value": "iubenda"
                },
                {
                  "name": "Ketch",
                  "value": "ketch"
                },
                {
                  "name": "OneTrust",
                  "value": "oneTrust"
                }
              ],
              "defaultOption": {
                "name": "OneTrust",
                "value": "oneTrust"
              },
              "required": true
            },
            {
              "type": "singleSelect",
              "label": "the required consent logic",
              "value": "resolutionStrategy",
              "options": [
                {
                  "name": "AND",
                  "value": "and"
                },
                {
                  "name": "OR",
                  "value": "or"
                }
              ],
              "required": true,
              "variant": "badge",
              "preRequisites": {
                "fields": [
                  {
                    "configKey": "provider",
                    "value": "custom"
                  }
                ]
              }
            },
            {
              "type": "dynamicCustomForm",
              "value": "consents",
              "label": "Enter consent category IDs",
              "customFields": [
                {
                  "type": "textInput",
                  "placeholder": "Marketing",
                  "value": "consent",
                  "regex": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$",
                  "required": false
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
