{
  "uiConfig": [
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "Pixel ID",
          "value": "pixelId",
          "regex": "^(.{1,50})$",
          "regexErrorMessage": "Length of Pixel ID must be below 50 characters.",
          "required": true,
          "secret": false,
          "placeholder": "e.g: 641234",
          "footerNote": "Pixel ID associated with request."
        },
        {
          "type": "textInput",
          "label": "Event ID",
          "value": "eventId",
          "regex": "^(.{0,50})$",
          "regexErrorMessage": "Length of Event ID must be below 50 characters.",
          "required": false,
          "secret": false,
          "placeholder": "e.g: 641234",
          "footerNote": "Event ID associated with request."
        }
      ]
    }
  ]
}
