{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "commonDestinationsSchema",
  "definitions": {
    "consentManagement": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "provider": {
            "type": "string",
            "enum": ["custom", "ketch", "oneTrust"],
            "default": "oneTrust"
          },
          "consents": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "consent": {
                  "type": "string",
                  "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
                }
              }
            }
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "provider": {
                  "const": "custom"
                }
              },
              "required": ["provider"]
            },
            "then": {
              "properties": {
                "resolutionStrategy": {
                  "type": "string",
                  "enum": ["and", "or"]
                }
              },
              "required": ["resolutionStrategy"]
            }
          }
        ]
      }
    },
    "consentManagementAllSourceTypes": {
      "type": "object",
      "properties": {
        "cloud": {
          "$ref": "#/definitions/consentManagement"
        },
        "warehouse": {
          "$ref": "#/definitions/consentManagement"
        },
        "android": {
          "$ref": "#/definitions/consentManagement"
        },
        "ios": {
          "$ref": "#/definitions/consentManagement"
        },
        "web": {
          "$ref": "#/definitions/consentManagement"
        },
        "unity": {
          "$ref": "#/definitions/consentManagement"
        },
        "amp": {
          "$ref": "#/definitions/consentManagement"
        },
        "reactnative": {
          "$ref": "#/definitions/consentManagement"
        },
        "flutter": {
          "$ref": "#/definitions/consentManagement"
        },
        "cordova": {
          "$ref": "#/definitions/consentManagement"
        },
        "shopify": {
          "$ref": "#/definitions/consentManagement"
        }
      }
    }
  }
}
