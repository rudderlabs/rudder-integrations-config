{
  "uiConfig": [
    {
      "title": "1. Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "App Key",
          "value": "appKey",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid App Key",
          "required": true,
          "placeholder": "e.g: f2c7c97a-48d1-11ea-8e07-faffc22c7c7f"
        },
        {
          "type": "textInput",
          "label": "Rest Api Key",
          "value": "restApiKey",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Rest Api Key",
          "required": true,
          "placeholder": "e.g: 06c19c59-48d2-11ea-b27a-faffc22c7c7f",
          "secret": true
        },
        {
          "type": "textInput",
          "label": "Data Center",
          "value": "dataCenter",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid Data Center",
          "required": true,
          "placeholder": "e.g: EU-01"
        },
        {
          "type": "checkbox",
          "label": "Track events for anonymous users",
          "value": "trackAnonymousUser",
          "default": false,
          "footerNote": "Turn on if you want to track anonymous users"
        },
        {
          "type": "checkbox",
          "label": "Enable subscription groups in group call",
          "value": "enableSubscriptionGroupInGroupCall",
          "default": false,
          "footerNote": "Turn on if you want to support subscription group (https://www.braze.com/docs/api/endpoints/subscription_groups) via group call. "
        },
        {
          "type": "checkbox",
          "label": "Use Nested Array Operation",
          "value": "enableNestedArrayOperations",
          "default": false,
          "footerNote": "Turn on if you want to use nested array operations (https://www.braze.com/docs/user_guide/data_and_analytics/custom_data/custom_attributes/array_of_objects/)"
        }
      ]
    },
    {
      "title": "2. Custom html settings",
      "fields": [
        {
          "type": "checkbox",
          "label": "Enable html in app messages",
          "value": "enableHtmlInAppMessages",
          "default": false
        },
        {
          "type": "checkbox",
          "label": "Allow User Supplied Javascript",
          "value": "allowUserSuppliedJavascript",
          "default": false
        }
      ]
    },
    {
      "title": "3. Native SDK",
      "fields": [
        {
          "type": "checkbox",
          "label": "Use device-mode to send events",
          "value": "useNativeSDK",
          "default": true
        },
        {
          "type": "checkbox",
          "label": "Deduplicate Traits",
          "value": "supportDedup",
          "default": false,
          "footerNote": "Turn on if you want to enable Deduplicate Traits on identify, supported only in device mode"
        },
        {
          "type": "checkbox",
          "label": "Show braze logs",
          "value": "enableBrazeLogging",
          "default": false,
          "footerNote": "Turn on if you want to show braze logs to customer"
        }
      ]
    },
    {
      "title": "Client-side Events Filtering",
      "sectionNote": "Applicable only for device-mode integrations. If enabled, it works only with either allowlisted or denylisted events",
      "fields": [
        {
          "type": "singleSelect",
          "value": "eventFilteringOption",
          "required": false,
          "options": [
            {
              "name": "Disable",
              "value": "disable"
            },
            {
              "name": "Allowlist",
              "value": "whitelistedEvents"
            },
            {
              "name": "Denylist",
              "value": "blacklistedEvents"
            }
          ],
          "defaultOption": {
            "name": "Disable",
            "value": "disable"
          }
        },
        {
          "type": "dynamicCustomForm",
          "value": "whitelistedEvents",
          "label": "Allowlist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Anonymous Page Visit"
            }
          ]
        },
        {
          "type": "dynamicCustomForm",
          "value": "blacklistedEvents",
          "label": "Denylist",
          "customFields": [
            {
              "type": "textInput",
              "value": "eventName",
              "required": false,
              "placeholder": "e.g: Credit Card Added"
            }
          ]
        }
      ]
    },
    {
      "title": "Consent Settings",
      "fields": [
        {
          "type": "dynamicCustomForm",
          "value": "oneTrustCookieCategories",
          "label": "OneTrust Cookie Categories",
          "customFields": [
            {
              "type": "textInput",
              "placeholder": "Marketing",
              "value": "oneTrustCookieCategory",
              "label": "Category Name/ID",
              "required": false
            }
          ]
        }
      ]
    }
  ]
}
