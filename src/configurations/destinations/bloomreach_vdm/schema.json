{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["apiBaseUrl", "apiKey", "apiSecret", "projectToken", "catalogID"],
    "type": "object",
    "properties": {
      "apiBaseUrl": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|(?!.*\\.ngrok\\.io)^(?:http(s)?:\\/\\/)?[\\w.-]+(?:\\.[\\w\\.-]+)+[\\w\\-\\._~:/?#[\\]@!\\$&'\\(\\)\\*\\+,;=.]+$|^$"
      },
      "apiKey": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "apiSecret": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "projectToken": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "catalogID": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      },
      "connectionMode": {
        "type": "object",
        "properties": {
          "warehouse": {
            "type": "string",
            "enum": ["cloud"]
          }
        }
      },
      "consentManagement": {
        "type": "object",
        "properties": {
          "warehouse": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "provider": {
                  "type": "string",
                  "enum": ["custom", "ketch", "oneTrust"],
                  "default": "oneTrust"
                },
                "consents": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "consent": {
                        "type": "string",
                        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
                      }
                    }
                  }
                }
              },
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "provider": {
                        "const": "custom"
                      }
                    },
                    "required": ["provider"]
                  },
                  "then": {
                    "properties": {
                      "resolutionStrategy": {
                        "type": "string",
                        "enum": ["and", "or"]
                      }
                    },
                    "required": ["resolutionStrategy"]
                  }
                }
              ]
            }
          }
        }
      }
    }
  }
}
