{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["apiKey", "domain"],
    "type": "object",
    "properties": {
      "apiKey": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "domain": {
        "type": "string",
        "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{1,100})$"
      },
      "rudderEventsToFreshmarketerEvents": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "from": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            },
            "to": { "type": "string", "enum": ["sales_activity", "lifecycle_stage", ""] }
          }
        }
      },
      "oneTrustCookieCategories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "oneTrustCookieCategory": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|^(.{0,100})$"
            }
          }
        }
      },
      "connectionMode": {
        "type": "object",
        "properties": {
          "android": { "type": "string", "enum": ["cloud"] },
          "ios": { "type": "string", "enum": ["cloud"] },
          "web": { "type": "string", "enum": ["cloud"] },
          "unity": { "type": "string", "enum": ["cloud"] },
          "amp": { "type": "string", "enum": ["cloud"] },
          "reactnative": { "type": "string", "enum": ["cloud"] },
          "flutter": { "type": "string", "enum": ["cloud"] },
          "cordova": { "type": "string", "enum": ["cloud"] },
          "shopify": { "type": "string", "enum": ["cloud"] },
          "cloud": { "type": "string", "enum": ["cloud"] },
          "warehouse": { "type": "string", "enum": ["cloud"] }
        }
      }
    }
  }
}
