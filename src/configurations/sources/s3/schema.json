{
  "configSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [],
    "type": "object",
    "properties": {},
    "allOf": [
      {
        "if": {
          "properties": {
            "connectionMode": {
              "const": "usePasswordAuth"
            }
          },
          "required": [
            "connectionMode"
          ]
        },
        "then": {
          "properties": {
            "password": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|.*"
            }
          },
          "required": [
            "password"
          ]
        }
      },
      {
        "if": {
          "properties": {
            "connectionMode": {
              "const": "useKeyPairAuth"
            }
          },
          "required": [
            "connectionMode"
          ]
        },
        "then": {
          "properties": {
            "privateKey": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|.*"
            },
            "privateKeyPassphrase": {
              "type": "string",
              "pattern": "(^\\{\\{.*\\|\\|(.*)\\}\\}$)|(^env[.].+)|.*"
            }
          },
          "required": [
            "privateKey"
          ]
        }
      }
    ]
  }
}