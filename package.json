{
  "name": "rudder-config-schema",
  "version": "1.1.8",
  "description": "",
  "main": "src/index.ts",
  "private": true,
  "author": "RudderStack",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rudderlabs/rudder-config-schema/issues"
  },
  "homepage": "https://github.com/rudderlabs/rudder-config-schema#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/rudderlabs/rudder-config-schema.git"
  },
  "scripts": {
    "setup": "npm ci",
    "test": "jest --coverage",
    "test:silent": "npm run test -- --silent",
    "release": "npx standard-version",
    "check:lint": "eslint . -f json -o reports/eslint.json || exit 0",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "pre-commit": "npm run test",
    "commit-msg": "commitlint --edit",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/config-conventional": "^17.3.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.0",
    "@swc/core": "^1.3.24",
    "@swc/jest": "^0.2.24",
    "@types/express": "^4.17.15",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.4",
    "commitizen": "^4.2.6",
    "commitlint": "^17.3.0",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ajv": "^8.11.2",
    "glob": "^8.0.3"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.{json,js,ts,md}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraMode": false,
      "jiraOptional": true,
      "skipScope": true,
      "defaultType": "feat"
    }
  }
}
