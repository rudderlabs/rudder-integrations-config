[
    {
      "title": "Connection Settings",
      "fields": [
        {
          "type": "textInput",
          "label": "API KEY",
          "value": "apiKey",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid API KEY",
          "required": true,
          "placeholder": "e.g: 6f598d9b0510434146902cd1ac2a78e9",
          "secret": true
        },
        {
          "type": "textInput",
          "label": "Site Id/Subdomain",
          "value": "siteId",
          "regex": "^(.{0,100})$",
          "regexErrorMessage": "Invalid site id",
          "placeholder": "e.g: https://v3.recurly.com/accounts",
          "secret": true
        }
      ]
    }
  ]
  