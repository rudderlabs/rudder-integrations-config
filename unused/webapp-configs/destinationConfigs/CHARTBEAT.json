[
  {
    "title": "Connection Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "Domain",
        "value": "domain",
        "regex": "^(.{0,100})$",
        "regexErrorMessage": "Invalid Domain",
        "required": true,
        "placeholder": "e.g: ABCDEFG"
      },
      {
        "type": "textInput",
        "label": "UID",
        "value": "uid",
        "regex": "^(.{0,100})$",
        "regexErrorMessage": "Invalid UID",
        "required": true,
        "placeholder": "e.g: ABCDEFG"
      }
    ]
  },
  {
    "title": "Native SDK",
    "fields": [
      {
        "type": "defaultCheckbox",
        "label": "Use device-mode to send events",
        "value": "useNativeSDK",
        "default": true
      }
    ]
  },
  {
    "title": "Other Settings",
    "fields": [
      {
        "type": "checkbox",
        "label": "Send Name and Category as Title",
        "value": "sendNameAndCategoryAsTitle",
        "default": false
      },
      {
        "type": "checkbox",
        "label": "Use Chartbeat video script",
        "value": "video",
        "default": false
      }
    ]
  }
]