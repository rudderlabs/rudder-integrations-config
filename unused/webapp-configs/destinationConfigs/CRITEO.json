[
  {
    "title": "Connection Settings",
    "fields": [
      {
        "type": "textInput",
        "label": "Criteo Account ID",
        "value": "accountId",
        "required": true,
        "placeholder": "1234",
        "secret": true
      },
      {
          "type": "textInput",
          "label": "Home Page URL",
          "value": "homePageUrl",
          "required": false,
          "placeholder": "https://www.example.com"
        },
        {
          "type": "singleSelect",
          "label": "Email Hashing Method",
          "value": "hashMethod",
          "placeholder": "NONE",
          "options": [
            {
              "name": "NONE",
              "value": "none"
            },
            {
              "name": "MD5",
              "value": "md5"
            }
          ],
          "defaultOption": {
            "name": "NONE",
            "value": "none"
          }
        }
    ]
  },
  {
    "title": "Map specific fields to criteo fields: ",
    "fields": [
      {
        "type": "dynamicForm",
        "labelLeft": "Payload Field",
        "labelRight": "Mapped Field",
        "keyLeft": "from",
        "keyRight": "to",
        "placeholderLeft": "e.g: userEmail",
        "placeholderRight": "e.g: email",
        "value": "fieldMapping"
      }
    ]
  },
  {
    "title": "Native SDK",
    "fields": [
      {
        "type": "defaultCheckbox",
        "label": "Use device-mode to send events",
        "value": "useNativeSDK",
        "default": true
      }
    ]
  }
]
