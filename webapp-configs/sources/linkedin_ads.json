          "type": "singleSelect",
          "label": "Pivots",
          "value": "report.pivots",
          "required": true,
          "options": {
            "case":{
                "analytics":[
                    "MEMBER_COMPANY_SIZE",
                    "MEMBER_INDUSTRY",
                    "MEMBER_SENIORITY",
                    "MEMBER_JOB_TITLE",
                    "MEMBER_JOB_FUNCTION",
                    "MEMBER_COUNTRY",
                    "MEMBER_REGION",
                    "MEMBER_COMPANY"
                  ],
                "statistics":[
                    "COMPANY",
                    "ACCOUNT",
                    "SHARE",
                    "CAMPAIGN",
                    "CREATIVE",
                    "CAMPAIGN_GROUP",
                    "CONVERSION",
                    "SERVING_LOCATION",
                    "CARD_INDEX"
                ]
            }
          }
        }
      ]
    }
  ]
}
