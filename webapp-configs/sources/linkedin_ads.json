{
  "auth": {
    "type": "OAuth"
  },
  "config": [
    {
      "title": "Source Settings",
      "fields": [
        {
          "type": "singleSelect",
          "label": "Report Type",
          "value": "report.type",
          "required": true,
          "options": [
            {
              "name": "Analytics",
              "value": "analytics"
            },
            {
              "name": "Statistics",
              "value": "statistics"
            }
          ],
          "defaultOption": {
            "name": "Analytics",
            "value": "analytics"
          }
        },
        {
          "mode":"multiple",
          "preRequisiteField": {
            "name": "report.type",
